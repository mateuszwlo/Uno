<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED1C24"
    android:orientation="vertical"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/singlePlayerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/baloo"
        android:text="VS COMPUTER"
        android:textSize="18sp" />

    <Button
        android:id="@+id/localMultiplayerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/baloo"
        android:text="Local Multiplayer"
        android:textSize="18sp" />

    <Button
        android:id="@+id/internetMultiplayerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/baloo"
        android:text="Internet Multiplayer"
        android:textSize="18sp" />
</LinearLayout>