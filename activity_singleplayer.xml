<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SinglePlayerActivity">

    <ImageView
        android:id="@+id/playerTurnIv"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/player1" />

    <ImageView
        android:id="@+id/deckIv"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        app:srcCompat="@drawable/c108" />

    <ImageView
        android:id="@+id/pileIv"
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="265dp"
        app:srcCompat="@drawable/c108" />

    <LinearLayout
        android:id="@+id/player2cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player2Card"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/c108" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/playerCardsHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:id="@+id/playerCards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

</RelativeLayout>