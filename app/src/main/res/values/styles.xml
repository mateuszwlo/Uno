<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="deckImageView">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_marginTop">300dp</item>
    </style>

    <style name="pileImageView">
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_marginTop">265dp</item>
        <item name="android:layout_marginLeft">150dp</item>
    </style>

    <style name="matchMatchParent">]
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="playerTurnImageView">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="playerCardsHolder">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">500dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


</resources>
