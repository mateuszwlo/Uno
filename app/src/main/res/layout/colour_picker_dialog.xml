<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/redIv"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#ff5555"
        app:layout_constraintStart_toStartOf="@+id/guidelinev0.2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/greenIv"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#55aa55"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yellowIv"
        app:layout_constraintTop_toBottomOf="@+id/blueIv" />

    <ImageView
        android:id="@+id/blueIv"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#5555ff"
        app:layout_constraintStart_toEndOf="@+id/redIv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/yellowIv"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#ffaa00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelinev0.2"
        app:layout_constraintTop_toBottomOf="@+id/redIv" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinev0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.25" />
</androidx.constraintlayout.widget.ConstraintLayout>